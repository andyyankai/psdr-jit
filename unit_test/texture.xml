<?xml version='1.0'?>

<scene version="0.5.0">
	<integrator type="direct">
		<integer name="bsdf_samples" value="1"/>
		<integer name="emitter_samples" value="1"/>
	</integrator>

	<sensor type="perspective">
		<float name="fov" value="20"/>
		<string name="fovAxis" value="x"/>
		<string name="fov_axis" value="x"/>
		<transform name="toWorld">

			<lookat target="0, 9, 0" origin="0, 10, 0" up="0, 0, 1"/>
		</transform>

		<sampler type="independent">
			<integer name="sample_count" value="1"/>
		</sampler>

		<film type="hdrfilm">
			<integer name="height" value="512"/>
			<string name="pixel_format" value="rgb"/>
			<integer name="width" value="512"/>

			<rfilter type="box"/>
		</film>
	</sensor>

	<bsdf type="diffuse" id="red">
		<texture name="reflectance" type="bitmap">
			<boolean name="raw" value="true"/>
			<string name="filename" value="./data/albedo.exr"/>
		</texture>
	</bsdf>

	<shape type="obj">
		<string name="filename" value="./data/uv_plane.obj"/>
		<boolean name="face_normals" value="true"/>

		<ref id="red"/>
	</shape>
</scene>
